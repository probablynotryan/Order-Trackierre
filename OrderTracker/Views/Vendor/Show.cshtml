@{
  Layout = "_Layout";
}

@using OrderTracker.Models;

<h3>@Model["vendor"].Name Orders:</h3>

<ul>
@if (@Model["order"].Count == 0)
{
  <p>No orders currently active</p>
}
@foreach (Order order in @Model["order"])
{
  <li><a href='/vendors/@Model["vendor"].Id/orders/@order.Id'>@order.Description</a></li>
}
</ul>

<a class="btn btn-primary" href='/vendors/@Model["vendor"].Id/orders/new'>Add New Order</a>