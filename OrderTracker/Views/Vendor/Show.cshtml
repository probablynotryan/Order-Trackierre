@{
  Layout = "_Layout";
}
@using OrderTracker.Models;
<ul class="nav nav-tabs">
  <li class="nav-item">
    <a class="nav-link disabled"></a>
  </li>
  <li class="nav-item">
    <a class="nav-link" href="/">Home</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" href="/vendors">Vendors</a>
  </li> 
  <li class="nav-item">
    <a class="nav-link active" href="#">@Model["vendor"].Name Orders</a>
  </li>
</ul>
<h3 id="index">@Model["vendor"].Name Orders:</h3>

<ul id="myUL">
@if (@Model["order"].Count == 0)
{
  <p>No orders currently active</p>
}
@foreach (Order order in @Model["order"])
{
  <li><a href='/vendors/@Model["vendor"].Id/orders/@order.Id'>@order.Title</a></li>
}
</ul>

<a class="btn btn-warning" id="vendor-btn" href='/vendors/@Model["vendor"].Id/orders/new'>New Order</a>